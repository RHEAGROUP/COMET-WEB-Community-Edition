<nav class="navbar header-navbar p-0">
    <DxMenu Title="COMET"
            CollapseItemsToHamburgerMenu="true"
            CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
            DisplayMode="MenuDisplayMode.Auto"
            Orientation="Orientation.Horizontal"
            HamburgerButtonPosition="MenuHamburgerButtonPosition.Right"
            CssClass="topmenu">
        <TitleTemplate>
            <TopMenuTitle/>
        </TitleTemplate>
        <Items>
            <ApplicationMenu />
            <ModelMenu />
            <SessionMenu />
            
            @foreach (var menuEntry in this.RegistrationService.RegisteredAuthorizedMenuEntries.Where(x => x.IsSubclassOf(typeof(AuthorizedMenuEntry))))
            {
                <DynamicComponent Type="@menuEntry"/>
            }
            <AboutMenu/>
        </Items>
    </DxMenu>
</nav>

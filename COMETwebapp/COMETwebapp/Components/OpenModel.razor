@inject ISessionAnchor ISessionAnchor 
@inject NavigationManager NavigationManager

@if (ModelSetupList.Count == 0)
{
    InitializeModelList();
}

<div class="form-group row">
    <label>Model:</label>
    <div class="col-md-15 m-top-3px">
        <select @onchange="SetNameModel">
            <option value="">--Select--</option>
            @foreach (var model in ModelSetupList)
            {
                <option value="@model.Name">@model.Name</option>
            }
        </select>
    </div>
</div>

@if (IterationSetupList.Count != 0)
{
   <div class="form-group row">
    <label>Iteration:</label>
    <div class="col-md-15 m-top-3px">
        <select @onchange="SetIteration">
            <option value="">--Select--</option>
            @foreach(var iteration in IterationSetupList)
            {
                <option value="@iteration.Description">@iteration.Description</option>
            }
        </select>
    </div>
</div>
}
@if (DomainList.Count != 0)
{
   <div class="form-group row">
    <label>Domain:</label>
    <div class="col-md-15 m-top-3px">
        <select @onchange="SetDomain">
            <option value="">--Select--</option>
            @foreach(var domain in DomainList)
            {
                <option value="@domain.Name">@domain.Name</option>
            }
        </select>
    </div>
</div>
}

@if (ModelSetup != null && IterationSetup != null && ISessionAnchor.CurrentDomainOfExpertise != null)
{
    <div class="row">
        <button class="btn btn-connect " @onclick="OpenAModel"> Open</button>
    </div>
}

@code {

    /// <summary>
    /// List of <see cref="EngineeringModelSetup"/> in the opened session
    /// </summary>
    private List<EngineeringModelSetup> ModelSetupList { get; set; } = new List<EngineeringModelSetup>();

    /// <summary>
    /// List of <see cref="IterationSetup"/> in the selected <see cref="EngineeringModelSetup"/>
    /// </summary>
    private List<IterationSetup> IterationSetupList { get; set; } = new List<IterationSetup>();

    /// <summary>
    /// List of <see cref="DomainOfExpertise"/> in the selected <see cref="EngineeringModelSetup"/>
    /// </summary>
    private List<DomainOfExpertise> DomainList { get; set; } = new List<DomainOfExpertise>();

    /// <summary>
    /// The <see cref="EngineeringModelSetup"/> selected
    /// </summary>
    private EngineeringModelSetup ModelSetup { get; set; }

    /// <summary>
    /// The <see cref="IterationSetup"/> selected
    /// </summary>
    private IterationSetup IterationSetup { get; set; }

    /// <summary>
    /// Initialize <see cref="ModelSetupList"/> according to the opened Session and the <see cref="ActivePerson"/>
    /// </summary>
    private void InitializeModelList()
    {
        foreach (var model in ISessionAnchor.Session.RetrieveSiteDirectory().Model)
        {
            foreach (var participant in model.Participant)
            {
                if (participant.Person.Name.Equals(ISessionAnchor.Session.ActivePerson.Name))
                {
                    this.ModelSetupList.Add(model);
                }
            }
        }
    }

    /// <summary>
    /// Initialize <see cref="DomainList"/> and <see cref="IterationSetupList"/> according to the selected <see cref="ModelSetup"/>
    /// </summary>
    /// <param name="e"> Event emmited when a ModelSetup is selected </param>
    private void SetNameModel(ChangeEventArgs e)
    {
        foreach (var model in ISessionAnchor.Session.RetrieveSiteDirectory().Model)
        {
            if (model.Name.Equals(e.Value.ToString()))
            {
                this.ModelSetup = model;
                foreach (var participant in model.Participant)
                {
                    if (participant.Person.Name.Equals(ISessionAnchor.Session.ActivePerson.Name))
                    {
                        foreach(var domain in participant.Domain)
                        {
                            this.DomainList.Add(domain);
                        }
                    }
                }
                foreach(var iteration in model.IterationSetup)
                {
                    IterationSetupList.Add(iteration);
                }
            }
        }
    }

    /// <summary>
    /// Set the <see cref="CurrentDomainOfExpertise"/> of the <see cref="ISessionAnchor"/>
    /// </summary>
    /// <param name="e">Event emitted when a domain is selected</param>
    private void SetDomain(ChangeEventArgs e)
    {
        foreach (var domain in this.DomainList)
        {
            if (domain.Name.Equals(e.Value.ToString()))
            {
                this.ISessionAnchor.CurrentDomainOfExpertise = domain;
            }
        }
    }

    /// <summary>
    /// Set the <see cref="IterationSetup"/>
    /// </summary>
    /// <param name="e">Event emitted when an iteration is selected</param>
    private void SetIteration(ChangeEventArgs e)
    {
        foreach (var iteration in this.IterationSetupList)
        {
            if (iteration.Description.Equals(e.Value.ToString()))
            {
                this.IterationSetup = iteration;
            }
        }
    }

    /// <summary>
    /// Open the <see cref="EngineeringModel"/> with selected <see cref="ModelSetup"/>, <see cref="IterationSetup"/> and <see cref="CurrentDomainOfExpertise"/>
    /// </summary>
    public void OpenAModel()
    {
        this.ISessionAnchor.GetIteration(this.ModelSetup, this.IterationSetup);

        NavigationManager.NavigateTo(Path.Combine("/",this.ModelSetup.Name));
    }
}

@inject ISessionAnchor ISessionAnchor 
@inject NavigationManager NavigationManager

<EditForm Model="SelectedModelDto" OnValidSubmit="OpenAModel">
    <div class="form-group row">
        <label for="model">Select a Model:</label>
        <div class="col-md-15 m-top-3px">
            <InputSelect id="model" class="form-control" @bind-Value="SelectedModelDto.SelectedEngineeringModelSetupName" @oninput="GetDomains">
                <option>--Select--</option>
                @foreach (var model in ModelSetups)
                {
                    <option value="@model.Name">@model.Name</option>
                }
            </InputSelect>
        </div>
    </div>
    @if (this.SelectedEngineeringModelSetup != null)
    {
        <div class="form-group row">
            <label for="iteration">Select an iteration:</label>
            <div class="col-md-15 m-top-3px">
                <InputSelect id="iteration" class="form-control" @bind-Value="SelectedModelDto.SelectedIterationSetupNumber">
                    <option value="">--Select--</option>
                    @foreach (var iteration in this.SelectedEngineeringModelSetup.IterationSetup)
                    {
                         @if(@iteration.FrozenOn != null)
                        {
                            <option value="@iteration.IterationNumber">iteration_@iteration.IterationNumber - @iteration.FrozenOn</option>
                        } else
                        {
                            <option value="@iteration.IterationNumber">iteration_@iteration.IterationNumber - Active</option>
                        }  
                    }
                </InputSelect>
            </div>
        </div>
    }
    @if(this.Domains.Count != 0)
    {
        <div class="form-group row">
            <label for="domain">Select a Domain:</label>
            <div class="col-md-15 m-top-3px">
                <InputSelect id="domnain" class="form-control" @bind-Value="SelectedModelDto.SelectedDomainOfExpertiseName">
                    <option value="">--Select--</option>
                    @foreach (var domain in Domains)
                    {
                        <option value="@domain.Name">@domain.Name</option>
                    }
                </InputSelect>
            </div>
        </div>
    }
    @if (this.SelectedEngineeringModelSetup != null && this.Domains.Count != 0)
    {
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-connect">Open the Iteration</button>
            </div>
        </div> 
    }
</EditForm>

@code{
    /// <summary>
    /// Class to define the object to set in EditForm
    /// </summary>
    public class ModelDto
    {
        public string SelectedEngineeringModelSetupName { get; set; }

        public string SelectedIterationSetupNumber { get; set; }

        public string SelectedDomainOfExpertiseName { get; set; }
    }

    /// <summary>
    /// The <see cref="ModelDto"/> to set in EditForm
    /// </summary>
    private ModelDto SelectedModelDto = new ModelDto();

    /// <summary>
    /// The selected <see cref="IterationSetup"/>
    /// </summary>
    private IterationSetup SelectedIterationSetup { get; set; }

    /// <summary>
    /// The selected <see cref="EngineeringModelSetup"/>
    /// </summary>
    private EngineeringModelSetup SelectedEngineeringModelSetup { get; set; }

    /// <summary>
    /// List of <see cref="EngineeringModelSetup"/> in the opened session
    /// </summary>
    private List<EngineeringModelSetup> ModelSetups { get; set; } = new List<EngineeringModelSetup>();

    /// <summary>
    /// List of <see cref="DomainOfExpertise"/> in the selected <see cref="EngineeringModelSetup"/>
    /// </summary>
    private List<DomainOfExpertise> Domains { get; set; } = new List<DomainOfExpertise>();

    /// <summary>
    /// Initialize <see cref="ModelSetups"/> according to the opened Session and the <see cref="ActivePerson"/>
    /// </summary>
    protected override void OnInitialized()
    {
        this.ModelSetups.AddRange(this.ISessionAnchor.GetParticipantModels());
    }

    /// <summary>
    /// Initialize <see cref="Domains"/> and <see cref="IterationSetupList"/> according to the selected <see cref="SelectedEngineeringModelSetup"/>
    /// </summary>
    /// <param name="e"> Event emmited when a ModelSetup is selected </param>
    public void GetDomains(ChangeEventArgs e)
    {
        foreach (var model in ISessionAnchor.GetSiteDirectory().Model)
        {
            if (model.Name.Equals(e.Value.ToString()))
            {
                this.SelectedEngineeringModelSetup = model;
                this.Domains.AddRange(ISessionAnchor.GetModelDomains(this.SelectedEngineeringModelSetup));
            }
        }
    }

    /// <summary>
    /// Open the <see cref="EngineeringModel"/> with selected <see cref="EngineeringModelSetup"/>, <see cref="IterationSetup"/> and <see cref="DomainOfExpertise"/>
    /// </summary>
    public async void OpenAModel()
    {
        foreach (var domain in this.Domains)
        {
            if (domain.Name.Equals(this.SelectedModelDto.SelectedDomainOfExpertiseName))
            {
                this.ISessionAnchor.CurrentDomainOfExpertise = domain;
            }
        }
        foreach(var iteration in this.SelectedEngineeringModelSetup.IterationSetup)
        {
            if (iteration.IterationNumber == int.Parse(this.SelectedModelDto.SelectedIterationSetupNumber))
            {
                this.SelectedIterationSetup = iteration;
            }
        }

        await this.ISessionAnchor.GetIteration(this.SelectedEngineeringModelSetup, this.SelectedIterationSetup);
        NavigationManager.NavigateTo(Path.Combine("/",this.SelectedModelDto.SelectedEngineeringModelSetupName));
    }
}
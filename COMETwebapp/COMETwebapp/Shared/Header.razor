                <NotAuthorized>
                    <a href="" @onclick="@(() => PopupVisible = true)">Log in</a>
                    <DxPopup HeaderText="Login" @bind-Visible="@PopupVisible">
                        <Login />
                    </DxPopup>
                </NotAuthorized>
            </AuthorizeView>

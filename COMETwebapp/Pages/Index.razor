@page "/"
@inherits DisposableComponent

<AuthorizeView>
	<Authorized>
		<Dashboard /> 
		@{
			if (this.ViewModel.SessionService.OpenIterations.Items.Any())
			{
				this.RedirectTo();
			}
			else
			{
				<DxPopup Visible="true" HeaderText="Open a Model" ShowFooter="false" CloseOnEscape="false" CloseOnOutsideClick="false"
				         ShowCloseButton="false">
					<div class="row">
						<div class="open__model__header col p-0 col-10 font-weight-bold">
							@context.User.Identity?.Name - @this.ViewModel.SessionService.Session.DataSourceUri 
						</div>
						<div class="col p-0">
							<a class="m-left-10px" @onclick="@(() => this.ViewModel.Logout())">Log Out</a> 
						</div>
					</div>
					<OpenModel ModelId="@this.requestedModel" IterationId="@this.requestedIteration" DomainId="@this.requestedDomainOfExpertise"/>
				</DxPopup>
			}
		}
	</Authorized>
	<NotAuthorized>
		<div class="container height-90">
		<div class="row justify-content-center">
			<img id="comet-logo" src="images/COMET-Logo-large.png" class="p-1 large-logo" title="COMET Community Edition" alt="COMET Community Edition"/>
		</div>
		<div class="comet-info row text-align-center justify-content-center">
			<div class="card width-70">
				<div class="card-body font-weight-bold comet-info-text">
					<p class="no-margin"></p>
				</div>
				<div class="font-size-smaller">
					<div>Version: <b>@this.ViewModel.Version</b></div>
					<p>Copyright &copy; <text class="mx-3">2023.</text> <a href="https://www.rheagroup.com/" title="RHEA" target="_blank">RHEA System S.A.</a></p>
				</div>
			</div>
		</div>
		<div class="row text-align-start m-top-20px align-items-center justify-content-md-center">
			<div class="width-70">
				<div class="text-align-center font-weight-bold">Connect and Open a Model.</div>
				<DxTreeView CssClass="m-top-10px">
					<Nodes>
						<DxTreeViewNode Name="ConnectView" Text="Connect" Expanded CssClass="color-title font-weight-bold">
							<Nodes>
								<DxTreeViewNode CssClass="font-weight-100">
									<Template Context="_">
										<Login RequestedServer="@this.requestedServer"/>
									</Template>
								</DxTreeViewNode>
							</Nodes>
						</DxTreeViewNode>
					</Nodes>
				</DxTreeView>
			</div>
		</div>
	</div>
	</NotAuthorized>
</AuthorizeView>
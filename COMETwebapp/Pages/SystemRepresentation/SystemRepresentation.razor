@page "/SystemRepresentation"

<ApplicationTemplate Title="System Representation">
    <Body>
        <div class="row">
            <div class="col">
                <h6>Filter on Option:</h6>
                <div class="width-fit-content">
                    <DxComboBox Data="this.Options"
                                AllowUserInput="true"
                                NullText="--Select--"
                                Value="this.OptionSelected"
                                ValueChanged="@((string option) => OnOptionFilterChange(option))"
                                FilteringMode="DataGridFilteringMode.Contains" />
                </div>
                <h6>Filter on Domain:</h6>
                <div class="width-fit-content">
                    <DxComboBox Data="this.Domains"
                                AllowUserInput="true"
                                NullText="--Select--"
                                Value="this.DomainSelected"
                                ValueChanged="@((DomainOfExpertise domain) => OnDomainFilterChange(domain))"
                                FilteringMode="DataGridFilteringMode.Contains" />
                </div>
            </div>
        </div>
       <div id="gridParent">
           <div id="leftColumn">
                    @if (this.OptionSelected != null)
                    {
                        var name = string.Empty;

                        @if (this.Elements.Count > 0)
                        {
                            name = this.Elements.First().Name;
                        }
                        <COMETwebapp.Components.SystemRepresentation.SystemTree RootNode="this.RootNode" OnTreeSelectionChanged="@((node)=>TreeSelectionChanged(node))" />
                    }
                </div>
       </div>
    </Body>
</ApplicationTemplate>

<style>
    #gridParent {
        margin: 1% 0;
        display: grid;
        grid-template-columns: 0.15fr 1fr 0.23fr;
        grid-template-rows: 1fr;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    #leftColumn {
        grid-area: 1 / 1 / 2 / 2;
        margin: 0;
        margin-left: 2%;
        margin-right: 2%;
    }

    #rightColumn {
        grid-area: 1 / 3 / 2 / 4;
        margin: 0;
        margin-left: 2%;
    }
</style>
@page "/3DViewer"

@using COMETwebapp.Components.PropertiesPanel;

<ApplicationTemplate Title="3D Viewer">
    <Body>
        <div class="row">
            <div class="col">
                <div class="width-fit-content">
                    @{
                        var options = this.TotalOptions != null ? this.TotalOptions.Select(x => x.Name).ToList() : new List<string>();
                        <BSDropdown>
                            <Toggler><BSToggle IsButton="true" Color="BSColor.Secondary">@(this.SelectedOption != null ? this.SelectedOption.Name : "---")</BSToggle></Toggler>
                            <Content>
                                @foreach (var option in options)
                                {
                                    <BSDropdownItem>@option</BSDropdownItem>
                                }
                            </Content>
                        </BSDropdown>
                    }
                </div>
            </div>
        </div>
        <div id="gridParent">
            <div id="leftColumn">
                @if (this.SelectedOption != null)
                {
                    <ProductTree @ref=this.ProductTree RootNode="this.RootNode"/>
                }
            </div>
            <div id="center-container">
                <COMETwebapp.Components.PopUps.ConfirmChangeSelectionPopUp @ref=this.ConfirmChangeSelectionPopUp/>
                <CanvasComponent @ref=this.CanvasComponent ViewerPage="this" />
            </div>
            <div id="rightColumn">
                @if(this.SelectedOption != null)
                {
                    @if (this.CanvasComponent is not null)
                    {
                        <PropertiesComponent Canvas="this.CanvasComponent" ConfirmChangeSelectionPopUp="this.ConfirmChangeSelectionPopUp"></PropertiesComponent>
                    }
                    <ActualFiniteStateSelectorComponent ListActualFiniteStateList="this.ListActualFiniteStateLists"
                                                        OnActualFiniteStateChanged="this.ActualFiniteStateChanged">
                    </ActualFiniteStateSelectorComponent>
                }
            </div>
        </div>
    </Body>
</ApplicationTemplate>
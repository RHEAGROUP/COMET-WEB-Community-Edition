@using COMETwebapp.Primitives

@if(this.SelectedSceneObject is not null)
{
    <div id="propertiesPanel">
        @{
            var title = this.SelectedSceneObject is not null ? this.SelectedSceneObject.ElementBase.Name + " - Properties:" :  "Properties";
            var isDisabled = !this.GetChangedParametersKeyValue().Any();
            var buttonClass = !isDisabled ? "submit-button button-blue" : "submit-button";
            
            <div id="properties-title">
                <h6>@title</h6>
                <button @onclick="()=>this.OnSubmit()" class="@buttonClass" disabled="@isDisabled">Submit</button>
            </div>
        }

        <BSAccordion>
            <BSAccordionItem AlwaysOpen="true" DefaultShown="true">
                <Header>Parameters</Header>
                <Content>
                    <div id="parameters-section">
                        @{
                            var parameters = this.ParametersInUse;
                            @foreach (var parameter in parameters)
                            {
                                var classNames = parameter == this.SelectedParameter ? "parameter-item parameter-item-selected" : "parameter-item";
                                <p class="@classNames" @onclick="()=> this.ParameterChanged(parameter)">@parameter.ParameterType.Name</p>
                            }
                        }
                    </div>
                    <h5 id="details-title">Details</h5>
                    <DetailsComponent @ref=this.DetailsReference 
                                      ParameterSelected="this.SelectedParameter">
                    </DetailsComponent>
                </Content>
            </BSAccordionItem>
        </BSAccordion>
    </div>
}



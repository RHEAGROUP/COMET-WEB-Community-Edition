@using COMETwebapp.Primitives
@inherits PropertiesBase

<div id="propertiesPanel">
    @{
        var title = "Properties";
        if (this.SelectedPrimitive is not null)
        {
            title = this.SelectedPrimitive.ElementUsage.Name + " - Properties:";
        }

        <div id="properties-title">
            <h6>@title</h6>
            <button @onclick="()=>this.OnSubmit()">Submit</button>
        </div>
    }

    <BSAccordion>
        <BSAccordionItem AlwaysOpen="true" DefaultShown="true">
            <Header>Parameters</Header>
            <Content>
                <div id="parameters-section">
                    @{
                        if (this.SelectedPrimitive is not null)
                        {
                            var parameters = this.ParametersInUse;
                            @foreach (var parameter in parameters)
                            {
                                if (parameter == this.SelectedParameter)
                                {
                                    <p class="parameter-item parameter-item-selected" @onclick="()=> this.ParameterChanged(parameter)">@parameter.ParameterType.Name</p>
                                }
                                else
                                {
                                    <p class="parameter-item" @onclick="()=> this.ParameterChanged(parameter)">@parameter.ParameterType.Name</p>
                                }
                            }
                        }
                    }
                </div>
                <div>
                    <h5 id="details-title">Details</h5>
                    <DetailsComponent @ref=this.DetailsReference ParameterSelected="this.SelectedParameter" PrimitiveSelected="this.SelectedPrimitive" />
                </div>
            </Content>
        </BSAccordionItem>
    </BSAccordion>
</div>

<style>
    p {
        margin: 0;
    }

    #properties-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0;
        background: gray;
        font-weight: bold;
        padding: 2%;
    }

        #properties-title > h6 {
            margin: 0;
            font-weight: bold;
        }

    #parameters-section {
        display: flex;
        align-items: start;
        flex-wrap: wrap;
    }

    .parameter-item {
        margin: 1%;
        background: #EAECEE;
        border-radius: 5px;
        padding: 1%;
        box-shadow: 0 0 0 1px #CCCCCC;
        cursor: pointer;
        transition: all 0.3s;
    }

        .parameter-item:hover {
            box-shadow: 0 0 0 2px gray;
        }

    .parameter-item-selected {
        box-shadow: 0 0 0 3px #008bd2;
    }

    #propertiesPanel {
        border: 1px solid lightgray;
        overflow-y: auto;
        overflow-x: hidden;
        border-radius: 5px;
    }
</style>

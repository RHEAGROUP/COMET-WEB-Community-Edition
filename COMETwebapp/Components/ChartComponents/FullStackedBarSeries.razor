@using DevExpress.Blazor

<DxChart Data="@Data" CustomizeSeriesPoint="@PreparePointLabel">
    <DxChartTitle Text="@Title" />
    <DxChartFullStackedBarSeries Name="@NameSerie1" Filter="@((DataChart s) => s.Argument.Equals(NameSerie1))"
                                ArgumentField="@(s => s.Domain)" ValueField="@(s => s.Value)"
                                AggregationMethod="Enumerable.Sum">
        <DxChartSeriesLabel Position="RelativePosition.Inside"/>
    </DxChartFullStackedBarSeries>
    <DxChartFullStackedBarSeries Name="@NameSerie2" Filter="@((DataChart s) => s.Argument.Equals(NameSerie2))"
                                ArgumentField="@(s => s.Domain)" ValueField="@(s => s.Value)"
                                AggregationMethod="Enumerable.Sum">
        <DxChartSeriesLabel Position="RelativePosition.Inside"/>
    </DxChartFullStackedBarSeries>
    <DxChartLegend Visible="false" />
</DxChart>

@code {
    /// <summary>
    /// Data in the graph
    /// </summary>
    [Parameter]
    public List<DataChart> Data { get; set; }

    /// <summary>
    /// Title of the graph
    /// </summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary>
    /// Name of first serie in the graph
    /// </summary>
    [Parameter]
    public string NameSerie1 { get; set; }

    /// <summary>
    /// Title of second serie in the graph
    /// </summary>
    [Parameter]
    public string NameSerie2 { get; set; }

    /// <summary>
    /// Set the point label on the graph
    /// </summary>
    /// <param name="pointSettings">The <see cref="ChartSeriesPointCustomizationSettings"> providing data of the selected point in the graph</param>
    protected void PreparePointLabel(ChartSeriesPointCustomizationSettings pointSettings) {
        var value = pointSettings.Point.Value;
        if (!value.Equals(0))
        {
            pointSettings.PointLabel.Visible = true;
        }
    }
}

@using CDP4Common.EngineeringModelData
@using CDP4Common.SiteDirectoryData
@using COMETwebapp.Services.SessionManagement
@using COMETwebapp.SessionManagement
@using COMETwebapp.ViewModels.Components.ParameterEditor
@using COMETwebapp.Components.Shared.ParameterEditors;

@if (this.Elements is null)
{
    return;
}

<div class="container-fluid" style="min-width: 1400px; margin-top: 15px;">
    <DxGrid CssClass="default-grid"
            ShowAllRows="true"
            Data="@this.ViewModel.Rows.Items"
            SelectionMode="GridSelectionMode.Single"
            AllowSelectRowByClick="false"
            ShowFilterRow="true"
            ShowGroupPanel="true"
            FocusedRowEnabled="true"
            DetailExpandButtonDisplayMode="GridDetailExpandButtonDisplayMode.Auto">
        <Columns>
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.ElementBaseName)" GroupIndex="0" GroupInterval="GridColumnGroupInterval.Value" Caption="@("Element Name")" AllowSort="true"/>
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.ParameterName)" GroupIndex="1" GroupInterval="GridColumnGroupInterval.Value" Caption="@("Parameter")" AllowGroup="true" AllowSort="true" />

            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.Option)" Caption="@("Option")" GroupIndex="2" GroupInterval="GridColumnGroupInterval.Value" AllowSort="true" />
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.State)" Caption="@("State")" AllowGroup="false" AllowSort="true" />
            
            <DxGridDataColumn Caption="@("Published Value")" AllowGroup="false" AllowSort="false">
                <CellDisplayTemplate>
                    <p>ValueSet Editors</p>
                </CellDisplayTemplate>
            </DxGridDataColumn>
            
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.ParameterType)" Caption="@("Value")" AllowGroup="false" AllowSort="false">
                <CellDisplayTemplate>
                    @if(@context.DataItem is IParameterBaseRowViewModel parameterBaseRowViewModel)
                    {
                        <ParameterTypeEditorSelector ViewModel="parameterBaseRowViewModel.CreateParameterTypeEditorSelectorViewModel()"/>
                    }
                </CellDisplayTemplate>
            </DxGridDataColumn>
            
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.Switch)" Caption="@("Switch")" AllowGroup="false" AllowSort="true">
                <CellDisplayTemplate>
                    <ParameterSwitchKindComponent/>
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.ModelCode)" Caption="@("Model Code")" AllowGroup="false" AllowSort="true" />
            <DxGridDataColumn FieldName="@nameof(IParameterBaseRowViewModel.OwnerName)" Caption="@("Owner")" AllowGroup="false" AllowSort="true" />
        </Columns>
    </DxGrid>
</div>

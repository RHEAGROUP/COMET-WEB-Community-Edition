<div class="container-fluid">
    @if(this.Elements != null)
    {
        <DxTreeView CssClass="m-top-10px" @key="DateTime.Now">
            <Nodes>
                @foreach(var element in this.Elements)
                {
                    var toDisplay = true;
                    if(this.SelectedElement != null)
                    {
                        toDisplay = element.Iid == this.SelectedElement.Iid;
                    }
                    <ParameterTreeNode ToDisplay="@toDisplay" Element="element" />
                }
            </Nodes>
        </DxTreeView>
    }
</div>

@code {
    /// <summary>
    /// All <see cref="ElementUsage">s and the Top <see cref="ElementDefinition"> of the iteration
    /// </summary>
    [Parameter]
    public List<ElementBase>? Elements { get; set; }

    /// <summary>
    /// The selected <see cref="ElementBase"> to show
    /// </summary>
    [Parameter]
    public ElementBase? SelectedElement { get; set; } 
}

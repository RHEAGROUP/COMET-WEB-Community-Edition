@inject ISessionAnchor sessionAnchor

<div class="display-flex flex-row">
    <div class="display-flex flex-column width-100 align-items-center justify-content-center">
        <h3 class="font-weight-bold color-title">@Title</h3>
    </div>
    @if (sessionAnchor.GetIteration() is not null)
    {
        <div class="display-flex width-fit-content align-items-center">
            <CloseModelButton/>
        </div>
    }
</div>
@if (sessionAnchor.GetIteration() is not null)
{
    <div>
        @Body
    </div>
}


@code {
    /// <summary>
    /// Title of the application
    /// </summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary>
    /// Body of the application
    /// </summary>
    [Parameter]
    public RenderFragment? Body { get; set; }
}

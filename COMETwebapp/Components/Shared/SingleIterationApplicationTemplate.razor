@inherits DisposableComponent

<DxPopup @bind-Visible="@this.ViewModel.IsOnIterationSelectionMode" CloseOnEscape="false" ShowFooter="false" ShowCloseButton="false"
         CloseOnOutsideClick="false" HeaderText="Choose an Iteration">
	<IterationSelector ViewModel="@this.ViewModel.IterationSelectorViewModel"/>
</DxPopup>

@if (this.ViewModel.SessionService.OpenIterations.Count == 0)
{
	<DxPopup Visible="true" HeaderText="Open a Model" ShowFooter="false" CloseOnEscape="false" CloseOnOutsideClick="false"
	         ShowCloseButton="false">
		<OpenModel />
	</DxPopup>
}
else
{
	<div class="container-fluid">
		<div class="row m-top-10px">
			@if (this.ViewModel.SelectedIteration is not null)
			{
				<CascadingValue Value="this.ViewModel.SelectedIteration">
					<div>
						@this.Body
					</div>
				</CascadingValue>
			}
		</div>
	</div>
}

@inject ISessionAnchor ISessionAnchor
@using DevExpress.Blazor
@using System.Collections.ObjectModel

<DxDataGrid Data="@Parameters" PageSize="0">
    <DxDataGridColumn Field="@nameof(BuiltParameter.ElementName)" Width="100px" Caption="Element" TextAlignment="DataGridTextAlign.Center" SortOrder="DataGridColumnSortOrder.Ascending" GroupIndex="0" />
    <DxDataGridColumn Field="@nameof(BuiltParameter.Domain)" Width="50px" TextAlignment="DataGridTextAlign.Center"/>
    <DxDataGridColumn Field="@nameof(BuiltParameter.Option)" Width="50px" TextAlignment="DataGridTextAlign.Center"/>
    <DxDataGridColumn Field="@nameof(BuiltParameter.State)" Width="50px" TextAlignment="DataGridTextAlign.Center"/>
    <DxDataGridColumn Field="@nameof(BuiltParameter.Name)" Caption="Parameter" Width="50px" TextAlignment="DataGridTextAlign.Center" GroupIndex="1"/>
    <DxDataGridColumn Field="@nameof(BuiltParameter.Value)" Width="50px" TextAlignment="DataGridTextAlign.Center">
        <DisplayTemplate>
            @{
                var intvalue = (context as BuiltParameter).Value;
             }
            <a>@intvalue.First()</a>
        </DisplayTemplate>
    </DxDataGridColumn>
    <DxDataGridColumn Field="@nameof(BuiltParameter.Scale)" Width="50px" TextAlignment="DataGridTextAlign.Center"/>
</DxDataGrid>

@code {

    /// <summary>
    /// List of <see cref="BuiltParameter"> in the table
    /// </summary>
    readonly ObservableCollection<BuiltParameter> Parameters = new ObservableCollection<BuiltParameter>();

    /// <summary>
    /// Initialize the <see cref="Parameters"> list
    /// </summary>
    protected override void OnInitialized()
    {
        var ListElements = ISessionAnchor.OpenIteration.Element;
        if (ListElements.Count != 0)
        {
            foreach (var element in ListElements)
            {
                var parameters = element.Parameter;
                if (parameters.Count != 0)
                {
                    foreach (var parameter in parameters)
                    {
                        foreach (var valueset in parameter.ValueSet)
                        {
                            Parameters.Add(new BuiltParameter()
                                {
                                    Name = parameter?.ParameterType?.Name,
                                    ElementName = element?.Name,
                                    Domain = parameter?.Owner?.Name,
                                    Option = valueset?.ActualOption?.Name,
                                    State = valueset?.ActualState?.Name,
                                    Scale = parameter?.Scale?.ShortName,
                                    Value = valueset?.ActualValue
                                });
                        }
                    }
                }
            }
        }
    }

}
